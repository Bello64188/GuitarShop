@model Product
 
@{
    ViewData["Title"] = "Add";
}


<div class="container w-50">
    <h1 class="mt-3">Add Product</h1>

    <form action="Add" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"  />
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div>
            <label asp-for="CategoryId"> Category</label>
            <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Category,"CategoryId","Name")) " class="form-control">
            </select>
        </div>
        <div class="row  ml-2 mt-4">
            <input type="submit" value="Add" class="btn btn-primary col-2 " />
            <a asp-controller="Home" asp-action="Index" class="btn btn-success col-2 ml-3">Home</a>
        </div>

    </form>

</div>
