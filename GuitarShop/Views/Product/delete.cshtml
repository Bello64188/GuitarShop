@model Product
@{
    ViewData["Title"] = "delete";
}

<div class="container w-75">
    <h1 class="mt-3">Delete Product</h1>

    <form action="Delete" method="post">
        <input type="hidden" asp-for="ProductId" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled/>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" disabled />
        </div>
        <div>
            <label asp-for="CategoryId"> Category</label>
            <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Category,"CategoryId","Name")) " class="form-control" disabled>
            </select>
        </div>
        <div class="row mt-2 offset-1">
            <input type="submit" value="Delete" class="btn btn-danger col-2 " />
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary col-2 ml-3">Cancel</a>
        </div>

    </form>

</div>

